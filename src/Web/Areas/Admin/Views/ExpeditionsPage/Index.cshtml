@model TravelCleanArch.Application.Abstractions.Travel.ExpeditionPagedResult
@{
    ViewData["Title"] = "Expeditions";
}

<div class="d-flex justify-content-between mb-3">
    <h3>Expeditions</h3>
    <a class="btn btn-primary" asp-action="Create">Add Expedition</a>
</div>

<table class="table table-striped">
    <thead><tr><th>Name</th><th>Type</th><th>Destination</th><th>Status</th><th>Price</th><th></th></tr></thead>
    <tbody>
    @foreach (var item in Model.Items)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.ExpeditionTypeTitle</td>
            <td>@item.Destination</td>
            <td>@item.Status</td>
            <td>@item.Price</td>
            <td class="text-end">
                <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this expedition?')">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
