@model TravelCleanArch.Web.Areas.Admin.Models.PatronFormViewModel
@{ var isEdit = Model.Id.HasValue; }
<div class="container-fluid"><h2>@(isEdit?"Edit":"Create") Patron</h2><form method="post" enctype="multipart/form-data" action="@(isEdit?$"/admin/company/patrons/{Model.Id}/edit":"/admin/company/patrons/create")">@Html.AntiForgeryToken() @if(isEdit){<input type="hidden" asp-for="Id"/>}
<div class="mb-2"><label asp-for="Name"></label><input asp-for="Name" class="form-control"/></div><div class="mb-2"><label asp-for="Role"></label><input asp-for="Role" class="form-control"/></div><div class="mb-2"><label asp-for="Biography"></label><textarea asp-for="Biography" class="form-control"></textarea></div><div class="mb-2"><label asp-for="Image"></label><input asp-for="Image" type="file" class="form-control"/></div><div class="mb-2"><label asp-for="Ordering"></label><input asp-for="Ordering" class="form-control"/></div><div class="form-check mb-2"><input asp-for="IsPublished" class="form-check-input"/><label asp-for="IsPublished" class="form-check-label"></label></div><button class="btn btn-primary">Save</button></form></div>
