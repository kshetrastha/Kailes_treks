@model TravelCleanArch.Web.Areas.Admin.Models.WhoWeAreHeroFormViewModel
@{
    ViewData["Title"] = "Edit Who We Are Header";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Company / Who We Are / Header</h2>
        <a class="btn btn-outline-secondary" href="/admin/company/who-we-are">Back to list</a>
    </div>

    @if (TempData["SuccessMessage"] is string message)
    {
        <div class="alert alert-success">@message</div>
    }

    <div class="card">
        <div class="card-body">
            <form method="post" action="/admin/company/who-we-are/header" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                @if (Model.Id.HasValue)
                {
                    <input type="hidden" asp-for="Id" />
                }

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Header" class="form-label"></label>
                        <input asp-for="Header" class="form-control" />
                        <span asp-validation-for="Header" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="BackgroundImage" class="form-label"></label>
                        <input asp-for="BackgroundImage" class="form-control" type="file" accept="image/*" />
                        <span asp-validation-for="BackgroundImage" class="text-danger"></span>

                        @if (!string.IsNullOrWhiteSpace(Model.ExistingBackgroundImagePath))
                        {
                            <div class="mt-2">
                                <small class="text-muted d-block">Current background image</small>
                                <img src="/@Model.ExistingBackgroundImagePath" alt="Current background image" style="width: 180px; height: 100px; object-fit: cover; border-radius: 8px;" />
                            </div>
                        }
                    </div>
                </div>

                <div class="mt-4 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Save Header</button>
                    <a href="/admin/company/who-we-are" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
