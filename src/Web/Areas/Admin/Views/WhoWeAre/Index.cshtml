@model IReadOnlyCollection<TravelCleanArch.Domain.Entities.WhoWeAre>
@{
    ViewData["Title"] = "Who We Are";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Company / Who We Are</h2>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-primary" href="/admin/company/who-we-are/header">Edit Header</a>
            <a class="btn btn-primary" href="/admin/company/who-we-are/create">Add New</a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] is string message)
    {
        <div class="alert alert-success">@message</div>
    }

    <div class="card">
        <div class="card-body">
            <div id="no-more-tables" class="table-responsive mb-2">
                <table class="table table-hover color-table info-table align-middle">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th style="width: 90px;">Order</th>
                            <th>Short Description</th>
                            <th>Sub Description</th>
                            <th>Description</th>
                            <th style="width: 90px;">Image</th>
                            <th style="width: 200px;">Image Caption</th>
                            <th style="width: 110px;">Status</th>
                            <th style="width: 190px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="8" class="text-center text-muted py-4">No Who We Are items found. Add your first item.</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td data-label="Order">@item.Ordering</td>
                                    <td data-label="Short Description">@item.Title</td>
                                    <td data-label="Sub Description">@(string.IsNullOrWhiteSpace(item.SubDescription) ? "-" : item.SubDescription)</td>
                                    <td data-label="Description">@item.Description</td>
                                    <td data-label="Image">
                                        @if (!string.IsNullOrWhiteSpace(item.ImagePath))
                                        {
                                            <img src="/@item.ImagePath" alt="@item.Title" style="width: 48px; height: 48px; object-fit: cover; border-radius: 9999px;" />
                                        }
                                        else
                                        {
                                            <span>-</span>
                                        }
                                    </td>
                                    <td data-label="Image Caption">@(string.IsNullOrWhiteSpace(item.ImageCaption) ? "-" : item.ImageCaption)</td>
                                    <td data-label="Status">
                                        @if (item.IsPublished)
                                        {
                                            <span class="badge bg-success">Published</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Draft</span>
                                        }
                                    </td>
                                    <td data-label="Actions">
                                        <a class="btn btn-sm btn-outline-primary" href="/admin/company/who-we-are/@item.Id/edit">Edit</a>
                                        <form method="post" action="/admin/company/who-we-are/@item.Id/delete" class="d-inline" onsubmit="return confirm('Delete this item?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
