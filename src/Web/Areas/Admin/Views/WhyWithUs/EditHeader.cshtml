@model TravelCleanArch.Web.Areas.Admin.Models.WhyWithUsHeroFormViewModel
@{
    ViewData["Title"] = "Edit Why With Us Header";
}

<div class="container-fluid">
    <div class="mb-3 d-flex justify-content-between align-items-center">
        <h2 class="mb-0">Edit Why With Us Header</h2>
        <a class="btn btn-outline-secondary" href="/admin/company/why-with-us">Back to list</a>
    </div>

    @if (TempData["SuccessMessage"] is string message)
    {
        <div class="alert alert-success">@message</div>
    }

    <div class="card">
        <div class="card-body">
            <form method="post" action="/admin/company/why-with-us/header" enctype="multipart/form-data">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Header" class="form-label"></label>
                    <input asp-for="Header" class="form-control" />
                    <span asp-validation-for="Header" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="BackgroundImage" class="form-label"></label>
                    <input asp-for="BackgroundImage" class="form-control" type="file" accept="image/*" />
                    @if (!string.IsNullOrWhiteSpace(Model.ExistingBackgroundImagePath))
                    {
                        <div class="form-text">
                            Current image: <a href="/@Model.ExistingBackgroundImagePath" target="_blank">@Model.ExistingBackgroundImagePath</a>
                        </div>
                    }
                    <span asp-validation-for="BackgroundImage" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Update Header</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
