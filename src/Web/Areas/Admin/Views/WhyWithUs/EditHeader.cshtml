@model TravelCleanArch.Web.Areas.Admin.Models.WhyWithUsHeroFormViewModel
@{
    ViewData["Title"] = "Edit Why With Us Header";
}

<div class="container-fluid">
    <div class="mb-3 d-flex justify-content-between align-items-center">
        <h2 class="mb-0">Edit Why With Us Header</h2>
        <a class="btn btn-outline-secondary" href="/admin/company/why-with-us">Back to list</a>
    </div>

    @if (TempData["SuccessMessage"] is string message)
    {
        <div class="alert alert-success">@message</div>
    }

    <div class="card">
        <div class="card-body">
            <form id="whyWithUsHeaderForm" method="post" action="/admin/company/why-with-us/header" enctype="multipart/form-data" novalidate>
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Header" class="form-label"></label>
                    <input asp-for="Header" class="form-control" />
                    <span asp-validation-for="Header" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="BackgroundImage" class="form-label"></label>
                    <input asp-for="BackgroundImage" class="form-control" type="file" accept="image/*" />
                    @if (!string.IsNullOrWhiteSpace(Model.ExistingBackgroundImagePath))
                    {
                        <div class="form-text">
                            Current image: <a href="/@Model.ExistingBackgroundImagePath" target="_blank">@Model.ExistingBackgroundImagePath</a>
                        </div>
                    }
                    <span asp-validation-for="BackgroundImage" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Update Header</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const maxFileSize = 5 * 1024 * 1024;

            $.validator.addMethod("noLeadingTrailingSpace", function (value, element) {
                if (this.optional(element)) {
                    return true;
                }

                return value.trim() === value;
            }, "This field cannot start or end with spaces.");

            $.validator.addMethod("imageExtension", function (value, element) {
                if (this.optional(element) || !value) {
                    return true;
                }

                return /\.(jpg|jpeg|png|webp|gif)$/i.test(value);
            }, "Background image must be a valid image file (jpg, jpeg, png, webp, gif).");

            $.validator.addMethod("fileSize", function (value, element, param) {
                if (this.optional(element) || !element.files || element.files.length === 0) {
                    return true;
                }

                return element.files[0].size <= param;
            }, "Background image size must be 5 MB or less.");

            $("#whyWithUsHeaderForm").validate({
                ignore: [],
                errorClass: "text-danger",
                rules: {
                    Header: {
                        required: true,
                        maxlength: 200,
                        noLeadingTrailingSpace: true
                    },
                    Title: {
                        required: true,
                        maxlength: 200,
                        noLeadingTrailingSpace: true
                    },
                    Description: {
                        required: true,
                        maxlength: 4000,
                        noLeadingTrailingSpace: true
                    },
                    BackgroundImage: {
                        imageExtension: true,
                        fileSize: maxFileSize
                    }
                },
                messages: {
                    Header: {
                        required: "Header is required.",
                        maxlength: "Header cannot exceed 200 characters."
                    },
                    Title: {
                        required: "Title is required.",
                        maxlength: "Title cannot exceed 200 characters."
                    },
                    Description: {
                        required: "Description is required.",
                        maxlength: "Description cannot exceed 4000 characters."
                    }
                }
            });
        })();
    </script>
}
