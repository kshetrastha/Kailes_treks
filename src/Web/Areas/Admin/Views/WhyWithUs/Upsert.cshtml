@model TravelCleanArch.Web.Areas.Admin.Models.WhyWithUsFormViewModel
@{
    var isEdit = Model.Id.HasValue;
    ViewData["Title"] = isEdit ? "Edit Why With Us" : "Create Why With Us";
}

<div class="container-fluid">
    <div class="mb-3 d-flex justify-content-between align-items-center">
        <h2 class="mb-0">@(isEdit ? "Edit" : "Create") Why With Us Item</h2>
        <a class="btn btn-outline-secondary" href="/admin/company/why-with-us">Back to list</a>
    </div>

    <div class="card">
        <div class="card-body">
            <form id="whyWithUsForm" method="post" action="@(isEdit ? $"/admin/company/why-with-us/{Model.Id}/edit" : "/admin/company/why-with-us/create")" enctype="multipart/form-data" novalidate>
                @Html.AntiForgeryToken()
                @if (isEdit)
                {
                    <input type="hidden" asp-for="Id" />
                }

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="7"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="IconCssClass" class="form-label"></label>
                    <input asp-for="IconCssClass" class="form-control" placeholder="e.g. fa-solid fa-medal" />
                    <small class="text-muted">Optional. Use Font Awesome class to match reference style.</small><br />
                    <span asp-validation-for="IconCssClass" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Image" class="form-label"></label>
                    <input asp-for="Image" class="form-control" type="file" accept="image/*" />
                    @if (!string.IsNullOrWhiteSpace(Model.ExistingImagePath))
                    {
                        <div class="form-text">
                            Current image: <a href="/@Model.ExistingImagePath" target="_blank">@Model.ExistingImagePath</a>
                        </div>
                    }
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Ordering" class="form-label"></label>
                    <input asp-for="Ordering" class="form-control" type="number" min="0" />
                    <span asp-validation-for="Ordering" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsPublished" class="form-check-input" />
                    <label asp-for="IsPublished" class="form-check-label"></label>
                </div>

                <button type="submit" class="btn btn-primary">@(isEdit ? "Update" : "Create")</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const maxFileSize = 5 * 1024 * 1024;

            $.validator.addMethod("noLeadingTrailingSpace", function (value, element) {
                if (this.optional(element)) {
                    return true;
                }

                return value.trim() === value;
            }, "This field cannot start or end with spaces.");

            $.validator.addMethod("iconCssSafe", function (value, element) {
                if (this.optional(element)) {
                    return true;
                }

                return !/[<>]/.test(value);
            }, "Icon CSS class contains invalid characters.");

            $.validator.addMethod("imageExtension", function (value, element) {
                if (this.optional(element) || !value) {
                    return true;
                }

                return /\.(jpg|jpeg|png|webp|gif)$/i.test(value);
            }, "Image must be a valid image file (jpg, jpeg, png, webp, gif).");

            $.validator.addMethod("fileSize", function (value, element, param) {
                if (this.optional(element) || !element.files || element.files.length === 0) {
                    return true;
                }

                return element.files[0].size <= param;
            }, "Image size must be 5 MB or less.");

            $("#whyWithUsForm").validate({
                ignore: [],
                errorClass: "text-danger",
                rules: {
                    Title: {
                        required: true,
                        maxlength: 200,
                        noLeadingTrailingSpace: true
                    },
                    Description: {
                        required: true,
                        maxlength: 4000,
                        noLeadingTrailingSpace: true
                    },
                    IconCssClass: {
                        maxlength: 80,
                        iconCssSafe: true
                    },
                    Ordering: {
                        required: true,
                        number: true,
                        min: 0,
                        max: 999
                    },
                    Image: {
                        imageExtension: true,
                        fileSize: maxFileSize
                    }
                },
                messages: {
                    Title: {
                        required: "Title is required.",
                        maxlength: "Title cannot exceed 200 characters."
                    },
                    Description: {
                        required: "Description is required.",
                        maxlength: "Description cannot exceed 4000 characters."
                    },
                    IconCssClass: {
                        maxlength: "Icon CSS class cannot exceed 80 characters."
                    },
                    Ordering: {
                        required: "Ordering is required.",
                        min: "Ordering cannot be below 0.",
                        max: "Ordering cannot exceed 999."
                    }
                }
            });
        })();
    </script>
}
