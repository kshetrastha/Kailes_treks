@model TravelCleanArch.Web.Areas.Admin.Models.TrekkingModuleFormViewModel
@using TravelCleanArch.Application.Abstractions.Travel
@{
    var isEdit = Model.Id.HasValue;
    var types = ViewBag.ExpeditionTypes as IReadOnlyCollection<ExpeditionTypeDto> ?? [];
}
<h3>@(isEdit ? "Edit" : "Create") Trekking Module</h3>
<form method="post" asp-action="@(isEdit ? "Edit" : "Create")" asp-route-id="@Model.Id">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <ul class="nav nav-tabs mb-3" id="trekking-module-tabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="basic-overview-tab" data-bs-toggle="tab" data-bs-target="#basic-overview" type="button" role="tab" aria-controls="basic-overview" aria-selected="true">Basic Info &amp; Overview</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="itineraries-tab" data-bs-toggle="tab" data-bs-target="#itineraries" type="button" role="tab" aria-controls="itineraries" aria-selected="false">Itineraries</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="inclusion-exclusion-tab" data-bs-toggle="tab" data-bs-target="#inclusion-exclusion" type="button" role="tab" aria-controls="inclusion-exclusion" aria-selected="false">Inclusion / Exclusion</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="departure-gear-tab" data-bs-toggle="tab" data-bs-target="#departure-gear" type="button" role="tab" aria-controls="departure-gear" aria-selected="false">Departure &amp; Gear</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="reviews-faqs-tab" data-bs-toggle="tab" data-bs-target="#reviews-faqs" type="button" role="tab" aria-controls="reviews-faqs" aria-selected="false">Reviews &amp; FAQs</button>
        </li>
    </ul>

    <div class="tab-content border border-top-0 rounded-bottom p-3 mb-3" id="trekking-module-tab-content">
        <div class="tab-pane fade show active" id="basic-overview" role="tabpanel" aria-labelledby="basic-overview-tab" tabindex="0">
            <partial name="Partials/_BasicInfo" model="Model" />
            <partial name="Partials/_Overview" model="Model" />
        </div>
        <div class="tab-pane fade" id="itineraries" role="tabpanel" aria-labelledby="itineraries-tab" tabindex="0">
            <partial name="Partials/_Itineraries" model="Model" />
        </div>
        <div class="tab-pane fade" id="inclusion-exclusion" role="tabpanel" aria-labelledby="inclusion-exclusion-tab" tabindex="0">
            <partial name="Partials/_InclusionExclusion" model="Model" />
        </div>
        <div class="tab-pane fade" id="departure-gear" role="tabpanel" aria-labelledby="departure-gear-tab" tabindex="0">
            <partial name="Partials/_FixedDepartures" model="Model" />
            <partial name="Partials/_Gear" model="Model" />
        </div>
        <div class="tab-pane fade" id="reviews-faqs" role="tabpanel" aria-labelledby="reviews-faqs-tab" tabindex="0">
            <partial name="Partials/_Reviews" model="Model" />
            <partial name="Partials/_Faqs" model="Model" />
        </div>
    </div>

    <button class="btn btn-primary">Save</button>
</form>
