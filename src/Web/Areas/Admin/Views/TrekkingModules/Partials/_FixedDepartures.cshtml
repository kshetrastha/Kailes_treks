@model TravelCleanArch.Web.Areas.Admin.Models.TrekkingModuleFormViewModel
<h5>5) Fixed Departures</h5>
@for (var i = 0; i < Model.FixedDepartures.Count; i++)
{
    <div class="row g-1 mb-1">
        <div class="col"><input type="date" name="FixedDepartures[@i].StartDate" value="@Model.FixedDepartures[i].StartDate.ToString("yyyy-MM-dd")" class="form-control" /></div>
        <div class="col"><input type="date" name="FixedDepartures[@i].EndDate" value="@Model.FixedDepartures[i].EndDate.ToString("yyyy-MM-dd")" class="form-control" /></div>
        <div class="col"><input name="FixedDepartures[@i].TotalSeats" value="@Model.FixedDepartures[i].TotalSeats" class="form-control" /></div>
        <div class="col"><input name="FixedDepartures[@i].BookedSeats" value="@Model.FixedDepartures[i].BookedSeats" class="form-control" /></div>
        <div class="col"><input name="FixedDepartures[@i].Status" value="@Model.FixedDepartures[i].Status" class="form-control" /></div>
    </div>
}
