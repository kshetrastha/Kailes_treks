@model TravelCleanArch.Web.Areas.Admin.Models.TrekkingModuleFormViewModel
<h5>6) Gear</h5>
@for (var i = 0; i < Model.Gears.Count; i++)
{
    <div class="row g-1 mb-1">
        <div class="col-3"><input name="Gears[@i].Category" value="@Model.Gears[i].Category" class="form-control" /></div>
        <div class="col-7"><input name="Gears[@i].ItemName" value="@Model.Gears[i].ItemName" class="form-control" /></div>
        <div class="col-2"><input name="Gears[@i].DisplayOrder" value="@Model.Gears[i].DisplayOrder" class="form-control" /></div>
    </div>
}
