@model TravelCleanArch.Web.Areas.Admin.Models.TrekkingModuleFormViewModel
<h5>7) Reviews</h5>
@for (var i = 0; i < Model.Reviews.Count; i++)
{
    <div class="row g-1 mb-1">
        <div class="col-2"><input name="Reviews[@i].ClientName" value="@Model.Reviews[i].ClientName" class="form-control" /></div>
        <div class="col-1"><input name="Reviews[@i].Rating" value="@Model.Reviews[i].Rating" class="form-control" /></div>
        <div class="col-8"><input name="Reviews[@i].Comment" value="@Model.Reviews[i].Comment" class="form-control" /></div>
        <div class="col-1"><input type="checkbox" name="Reviews[@i].IsApproved" checked="@Model.Reviews[i].IsApproved" /></div>
    </div>
}
