@model IReadOnlyCollection<TravelCleanArch.Application.Abstractions.Travel.TrekkingBasicInfoListItemDto>

<h3>Trekkings</h3>
<a asp-action="Create" class="btn btn-primary btn-sm mb-2">Create</a>
<table class="table table-striped">
    <thead><tr><th>Name</th><th>Difficulty</th><th>Duration</th><th>Featured</th><th></th></tr></thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td><td>@item.DifficultyLevel</td><td>@item.Duration</td><td>@item.IsFeatured</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">@Html.AntiForgeryToken()<button class="btn btn-sm btn-outline-danger">Delete</button></form>
            </td>
        </tr>
    }
    </tbody>
</table>
