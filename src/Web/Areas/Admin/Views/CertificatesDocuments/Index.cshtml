@model IReadOnlyCollection<TravelCleanArch.Domain.Entities.CertificateDocument>
@{
    ViewData["Title"] = "Company - Certificates & Documents";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Company / Certificates & Documents</h2>
        <a class="btn btn-primary" href="/admin/company/certificates-documents/create">Add New</a>
    </div>

    @if (TempData["SuccessMessage"] is string message)
    {
        <div class="alert alert-success">@message</div>
    }

    <div class="card"><div class="card-body"><div id="no-more-tables" class="table-responsive mb-2">
        <table class="table table-hover color-table info-table align-middle">
            <thead class="bg-primary text-white"><tr><th style="width:90px;">Order</th><th>Title</th><th>Category</th><th style="width:120px;">Issued</th><th style="width:100px;">Document</th><th style="width:95px;">Thumb</th><th style="width:110px;">Status</th><th style="width:190px;">Actions</th></tr></thead>
            <tbody>
            @if (!Model.Any())
            {
                <tr><td colspan="8" class="text-center text-muted py-4">No certificate/document found. Add your first item.</td></tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td data-label="Order">@item.Ordering</td>
                        <td data-label="Title">@item.Title</td>
                        <td data-label="Category">@(string.IsNullOrWhiteSpace(item.Category) ? "-" : item.Category)</td>
                        <td data-label="Issued">@item.IssuedOnUtc?.ToString("yyyy-MM-dd")</td>
                        <td data-label="Document">@if(!string.IsNullOrWhiteSpace(item.FilePath)){<a href="/@item.FilePath" target="_blank" rel="noopener">View</a>}else{<span>-</span>}</td>
                        <td data-label="Thumb">@if(!string.IsNullOrWhiteSpace(item.ThumbnailImagePath)){<img src="/@item.ThumbnailImagePath" alt="@item.Title" style="width: 48px; height: 48px; object-fit: cover; border-radius: 9999px;" />}else{<span>-</span>}</td>
                        <td data-label="Status">@if (item.IsPublished){<span class="badge bg-success">Published</span>}else{<span class="badge bg-secondary">Draft</span>}</td>
                        <td data-label="Actions"><a class="btn btn-sm btn-outline-primary" href="/admin/company/certificates-documents/@item.Id/edit">Edit</a><form method="post" action="/admin/company/certificates-documents/@item.Id/delete" class="d-inline" onsubmit="return confirm('Delete this item?');">@Html.AntiForgeryToken()<button type="submit" class="btn btn-sm btn-outline-danger">Delete</button></form></td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div></div></div>
</div>
