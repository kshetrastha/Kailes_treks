@model IReadOnlyCollection<TravelCleanArch.Domain.Entities.CertificateDocument>
<div class="container-fluid"><div class="d-flex justify-content-between mb-3"><h2>Certificates & Documents</h2><a class="btn btn-primary" href="/admin/company/certificates-documents/create">Add New</a></div>
<table class="table table-striped"><thead><tr><th>Order</th><th>Title</th><th>Category</th><th>Document</th><th>Status</th><th></th></tr></thead><tbody>
@foreach(var item in Model){<tr><td>@item.Ordering</td><td>@item.Title</td><td>@item.Category</td><td>@if(!string.IsNullOrWhiteSpace(item.FilePath)){<a href="/@item.FilePath" target="_blank">View</a>}</td><td>@(item.IsPublished?"Published":"Draft")</td><td><a class="btn btn-sm btn-outline-primary" href="/admin/company/certificates-documents/@item.Id/edit">Edit</a><form method="post" action="/admin/company/certificates-documents/@item.Id/delete" class="d-inline">@Html.AntiForgeryToken()<button class="btn btn-sm btn-outline-danger">Delete</button></form></td></tr>}
</tbody></table></div>
