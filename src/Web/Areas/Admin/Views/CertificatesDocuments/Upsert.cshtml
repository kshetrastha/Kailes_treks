@model TravelCleanArch.Web.Areas.Admin.Models.CertificateDocumentFormViewModel
@{ var isEdit = Model.Id.HasValue; }
<div class="container-fluid"><h2>@(isEdit?"Edit":"Create") Certificate/Document</h2><form method="post" enctype="multipart/form-data" action="@(isEdit?$"/admin/company/certificates-documents/{Model.Id}/edit":"/admin/company/certificates-documents/create")">@Html.AntiForgeryToken() @if(isEdit){<input type="hidden" asp-for="Id"/>}
<div class="mb-2"><label asp-for="Title"></label><input asp-for="Title" class="form-control"/></div><div class="mb-2"><label asp-for="Category"></label><input asp-for="Category" class="form-control"/></div><div class="mb-2"><label asp-for="Description"></label><textarea asp-for="Description" class="form-control"></textarea></div><div class="mb-2"><label asp-for="IssuedOnUtc"></label><input asp-for="IssuedOnUtc" type="date" class="form-control"/></div><div class="mb-2"><label asp-for="DocumentFile"></label><input asp-for="DocumentFile" type="file" class="form-control"/></div><div class="mb-2"><label asp-for="ThumbnailImage"></label><input asp-for="ThumbnailImage" type="file" class="form-control"/></div><div class="mb-2"><label asp-for="Ordering"></label><input asp-for="Ordering" class="form-control"/></div><div class="form-check mb-2"><input asp-for="IsPublished" class="form-check-input"/><label asp-for="IsPublished" class="form-check-label"></label></div><button class="btn btn-primary">Save</button></form></div>
