@model IReadOnlyCollection<TravelCleanArch.Domain.Entities.Review>
@{
    ViewData["Title"] = "Company - Reviews";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3"><h2 class="mb-0">Company / Reviews</h2><a class="btn btn-primary" href="/admin/company/reviews/create">Add New</a></div>
    @if (TempData["SuccessMessage"] is string message){<div class="alert alert-success">@message</div>}
    <div class="card"><div class="card-body"><div id="no-more-tables" class="table-responsive mb-2"><table class="table table-hover color-table info-table align-middle">
        <thead class="bg-primary text-white"><tr><th style="width:90px;">Order</th><th>Reviewer</th><th style="width:90px;">Rating</th><th>Review</th><th style="width:95px;">Image</th><th style="width:120px;">Date</th><th style="width:110px;">Status</th><th style="width:190px;">Actions</th></tr></thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr><td colspan="8" class="text-center text-muted py-4">No reviews found. Add your first review.</td></tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td data-label="Order">@item.Ordering</td><td data-label="Reviewer">@item.ReviewerName</td><td data-label="Rating">@item.Rating/5</td><td data-label="Review">@item.ReviewText</td>
                        <td data-label="Image">@if(!string.IsNullOrWhiteSpace(item.ReviewerImagePath)){<img src="/@item.ReviewerImagePath" alt="@item.ReviewerName" style="width: 48px; height: 48px; object-fit: cover; border-radius: 9999px;" />}else{<span>-</span>}</td>
                        <td data-label="Date">@item.ReviewedOnUtc?.ToString("yyyy-MM-dd")</td>
                        <td data-label="Status">@if(item.IsPublished){<span class="badge bg-success">Published</span>}else{<span class="badge bg-secondary">Draft</span>}</td>
                        <td data-label="Actions"><a class="btn btn-sm btn-outline-primary" href="/admin/company/reviews/@item.Id/edit">Edit</a><form method="post" action="/admin/company/reviews/@item.Id/delete" class="d-inline" onsubmit="return confirm('Delete this item?');">@Html.AntiForgeryToken()<button type="submit" class="btn btn-sm btn-outline-danger">Delete</button></form></td>
                    </tr>
                }
            }
        </tbody>
    </table></div></div></div>
</div>
