@model IReadOnlyCollection<TravelCleanArch.Domain.Entities.Review>
@{
    ViewData["Title"] = "Reviews";
}
<div class="container-fluid"><div class="d-flex justify-content-between mb-3"><h2>Reviews</h2><a class="btn btn-primary" href="/admin/company/reviews/create">Add New</a></div>
<table class="table table-striped"><thead><tr><th>Order</th><th>Name</th><th>Rating</th><th>Review</th><th>Status</th><th></th></tr></thead><tbody>
@foreach(var item in Model){<tr><td>@item.Ordering</td><td>@item.ReviewerName</td><td>@item.Rating/5</td><td>@item.ReviewText</td><td>@(item.IsPublished?"Published":"Draft")</td><td><a class="btn btn-sm btn-outline-primary" href="/admin/company/reviews/@item.Id/edit">Edit</a><form method="post" action="/admin/company/reviews/@item.Id/delete" class="d-inline">@Html.AntiForgeryToken()<button class="btn btn-sm btn-outline-danger">Delete</button></form></td></tr>}
</tbody></table></div>
