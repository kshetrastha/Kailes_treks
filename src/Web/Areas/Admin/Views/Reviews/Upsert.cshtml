@model TravelCleanArch.Web.Areas.Admin.Models.ReviewFormViewModel
@{ var isEdit = Model.Id.HasValue; }
<div class="container-fluid"><h2>@(isEdit?"Edit":"Create") Review</h2><form method="post" enctype="multipart/form-data" action="@(isEdit?$"/admin/company/reviews/{Model.Id}/edit":"/admin/company/reviews/create")">@Html.AntiForgeryToken() @if(isEdit){<input type="hidden" asp-for="Id"/>}
<div class="mb-2"><label asp-for="ReviewerName"></label><input asp-for="ReviewerName" class="form-control"/></div><div class="mb-2"><label asp-for="ReviewerRole"></label><input asp-for="ReviewerRole" class="form-control"/></div><div class="mb-2"><label asp-for="ReviewText"></label><textarea asp-for="ReviewText" rows="6" class="form-control"></textarea></div><div class="mb-2"><label asp-for="Rating"></label><input asp-for="Rating" class="form-control"/></div><div class="mb-2"><label asp-for="SourceName"></label><input asp-for="SourceName" class="form-control"/></div><div class="mb-2"><label asp-for="SourceUrl"></label><input asp-for="SourceUrl" class="form-control"/></div><div class="mb-2"><label asp-for="ReviewedOnUtc"></label><input asp-for="ReviewedOnUtc" type="date" class="form-control"/></div><div class="mb-2"><label asp-for="Image"></label><input asp-for="Image" type="file" class="form-control"/></div><div class="mb-2"><label asp-for="Ordering"></label><input asp-for="Ordering" class="form-control"/></div><div class="form-check mb-2"><input asp-for="IsPublished" class="form-check-input"/><label asp-for="IsPublished" class="form-check-label"></label></div><button class="btn btn-primary">Save</button></form></div>
