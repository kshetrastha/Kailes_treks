@model TravelCleanArch.Web.Areas.Admin.Models.BlogPostFormViewModel
@{ var isEdit = Model.Id.HasValue; ViewData["Title"] = isEdit ? "Edit Blog" : "Create Blog"; }
<div class="container-fluid">
    <h2>@(isEdit ? "Edit" : "Create") Blog</h2>
    <form method="post" enctype="multipart/form-data" action="@(isEdit?$"/admin/company/blogs/{Model.Id}/edit":"/admin/company/blogs/create")">
        @Html.AntiForgeryToken()
        @if (isEdit)
        {
            <input type="hidden" asp-for="Id" />
        }

        <div class="row g-3">
            <div class="col-md-8">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Slug" class="form-label">Slug (optional)</label>
                <input asp-for="Slug" class="form-control" />
                <span asp-validation-for="Slug" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="Summary" class="form-label"></label>
                <textarea asp-for="Summary" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Summary" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="ContentHtml" class="form-label">Content (HTML allowed)</label>
                <textarea asp-for="ContentHtml" class="form-control" rows="14"></textarea>
                <span asp-validation-for="ContentHtml" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="PublishedOnUtc" class="form-label"></label>
                <input asp-for="PublishedOnUtc" type="date" class="form-control" />
            </div>
            <div class="col-md-3">
                <label asp-for="Ordering" class="form-label"></label>
                <input asp-for="Ordering" class="form-control" />
            </div>
            <div class="col-md-3 form-check mt-5">
                <input asp-for="IsFeatured" class="form-check-input" />
                <label asp-for="IsFeatured" class="form-check-label"></label>
            </div>
            <div class="col-md-3 form-check mt-5">
                <input asp-for="IsPublished" class="form-check-input" />
                <label asp-for="IsPublished" class="form-check-label"></label>
            </div>

            <div class="col-md-6">
                <label asp-for="HeroImage" class="form-label">Hero image</label>
                <input asp-for="HeroImage" type="file" class="form-control" />
                @if (!string.IsNullOrWhiteSpace(Model.ExistingHeroImagePath))
                {
                    <img src="/@Model.ExistingHeroImagePath" class="img-thumbnail mt-2" style="max-height:180px;" />
                }
            </div>
            <div class="col-md-6">
                <label asp-for="ThumbnailImage" class="form-label">Thumbnail image</label>
                <input asp-for="ThumbnailImage" type="file" class="form-control" />
                @if (!string.IsNullOrWhiteSpace(Model.ExistingThumbnailImagePath))
                {
                    <img src="/@Model.ExistingThumbnailImagePath" class="img-thumbnail mt-2" style="max-height:180px;" />
                }
            </div>
        </div>

        <div class="mt-3">
            <button class="btn btn-primary">Save</button>
            <a href="/admin/company/blogs" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>
<partial name="_ValidationScriptsPartial" />
