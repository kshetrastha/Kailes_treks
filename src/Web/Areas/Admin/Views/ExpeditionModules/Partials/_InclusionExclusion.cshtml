@model TravelCleanArch.Web.Areas.Admin.Models.ExpeditionModuleFormViewModel
<h5>4) Inclusion / Exclusion</h5>
@for (var i = 0; i < Model.InclusionExclusions.Count; i++)
{
    <div class="row g-1 mb-1">
        <div class="col-2"><input name="InclusionExclusions[@i].Type" value="@Model.InclusionExclusions[i].Type" class="form-control" /></div>
        <div class="col-8"><input name="InclusionExclusions[@i].Description" value="@Model.InclusionExclusions[i].Description" class="form-control" /></div>
        <div class="col-2"><input name="InclusionExclusions[@i].DisplayOrder" value="@Model.InclusionExclusions[i].DisplayOrder" class="form-control" /></div>
    </div>
}
