@model TravelCleanArch.Web.Areas.Admin.Models.ChairmanMessageFormViewModel
@{ var isEdit = Model.Id.HasValue; }
<div class="container-fluid"><h2>@(isEdit?"Edit":"Create") Chairman Message</h2><form method="post" enctype="multipart/form-data" action="@(isEdit?$"/admin/company/chairman-message/{Model.Id}/edit":"/admin/company/chairman-message/create")">@Html.AntiForgeryToken() @if(isEdit){<input type="hidden" asp-for="Id"/>}
<div class="mb-2"><label asp-for="Heading"></label><input asp-for="Heading" class="form-control"/></div><div class="mb-2"><label asp-for="ChairmanName"></label><input asp-for="ChairmanName" class="form-control"/></div><div class="mb-2"><label asp-for="Designation"></label><input asp-for="Designation" class="form-control"/></div><div class="mb-2"><label asp-for="MessageHtml"></label><textarea asp-for="MessageHtml" rows="10" class="form-control"></textarea></div><div class="mb-2"><label asp-for="VideoUrl"></label><input asp-for="VideoUrl" class="form-control"/></div><div class="mb-2"><label asp-for="Image"></label><input asp-for="Image" type="file" class="form-control"/></div><div class="form-check mb-2"><input asp-for="IsPublished" class="form-check-input"/><label asp-for="IsPublished" class="form-check-label"></label></div><button class="btn btn-primary">Save</button></form></div>
