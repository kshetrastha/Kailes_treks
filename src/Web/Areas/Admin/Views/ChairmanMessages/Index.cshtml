@model IReadOnlyCollection<TravelCleanArch.Domain.Entities.ChairmanMessage>
@{
    ViewData["Title"] = "Company - Chairman's Message";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Company / Chairman's Message</h2>
        <a class="btn btn-primary" href="/admin/company/chairman-message/create">Add New</a>
    </div>

    @if (TempData["SuccessMessage"] is string message)
    {
        <div class="alert alert-success">@message</div>
    }

    <div class="card">
        <div class="card-body">
            <div id="no-more-tables" class="table-responsive mb-2">
                <table class="table table-hover color-table info-table align-middle">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th>Heading</th>
                            <th>Chairman</th>
                            <th>Designation</th>
                            <th style="width: 95px;">Image</th>
                            <th style="width: 140px;">Updated</th>
                            <th style="width: 110px;">Status</th>
                            <th style="width: 190px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr><td colspan="7" class="text-center text-muted py-4">No chairman message found. Add your first item.</td></tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td data-label="Heading">@item.Heading</td>
                                    <td data-label="Chairman">@item.ChairmanName</td>
                                    <td data-label="Designation">@(string.IsNullOrWhiteSpace(item.Designation) ? "-" : item.Designation)</td>
                                    <td data-label="Image">@if (!string.IsNullOrWhiteSpace(item.ImagePath)){<img src="/@item.ImagePath" alt="@item.ChairmanName" style="width: 48px; height: 48px; object-fit: cover; border-radius: 9999px;" />}else{<span>-</span>}</td>
                                    <td data-label="Updated">@item.UpdatedAtUtc.ToString("yyyy-MM-dd")</td>
                                    <td data-label="Status">@if (item.IsPublished){<span class="badge bg-success">Published</span>}else{<span class="badge bg-secondary">Draft</span>}</td>
                                    <td data-label="Actions">
                                        <a class="btn btn-sm btn-outline-primary" href="/admin/company/chairman-message/@item.Id/edit">Edit</a>
                                        <form method="post" action="/admin/company/chairman-message/@item.Id/delete" class="d-inline" onsubmit="return confirm('Delete this item?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
