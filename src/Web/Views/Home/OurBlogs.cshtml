@model TravelCleanArch.Web.Models.Home.BlogListViewModel
@{
    ViewData["Title"] = "Our Blogs";
    var featured = Model.FeaturedPost;
}

<div class="w-full min-h-screen">
    <!-- Hero section -->
    <section class="w-full relative overflow-hidden">
        <div class="w-full md:aspect-[16/5.3] aspect-[9/12] bg-[url('/customer/assets/img/contact.jpg')] bg-cover bg-top bg-no-repeat relative">
            <div class="w-full flex items-start justify-center h-full bg-black/50 pt-16 md:px-39 sm:px-20 px-4 flex-col">
                <h1 class="text-[35px] md:text-[42px] text-neutral-50 font-semibold mb-2">Our Blog</h1>
                <p class="text-base font-normal text-neutral-200 leading-[1.5] tracking-wide">
                    News and Events
                </p>
            </div>
        </div>
    </section>

    <!-- Blog card section -->
    <section class="w-full md:px-39 sm:px-20 px-4 md:py-20 py-10 space-y-12">
        <div class="w-full grid md:grid-cols-3 col-span-1 gap-8">
            @if (featured is not null)
            {
                <div class="w-full col-span-3 group">
                    <a href="/our-blogs/@featured.Slug" class="w-full md:aspect-[16/6.7] aspect-[9/12] block relative overflow-hidden">
                        <img src="@(string.IsNullOrWhiteSpace(featured.ThumbnailImagePath) ? "/customer/assets/img/hero/hero1.jpg" : $"/{featured.ThumbnailImagePath}")"
                             alt="@featured.Title"
                             class="w-full h-full object-cover object-center">
                        <div class="w-full h-full absolute top-0 left-0 bg-black/50 flex items-center justify-start">
                            <div class="max-w-2xl flex flex-col items-start justify-start gap-y-2 p-10">
                                <p class="text-neutral-100 font-light text-base mb-2">@featured.PublishedOnUtc?.ToString("MMM dd, yyyy")</p>
                                <h3 class="text-2xl md:text-[32px] font-semibold text-neutral-50 leading-[1.2] mb-6">
                                    @featured.Title
                                </h3>
                                @if (!string.IsNullOrWhiteSpace(featured.Summary))
                                {
                                    <p class="text-base font-normal text-neutral-100">
                                        @featured.Summary
                                    </p>
                                }
                            </div>
                        </div>
                    </a>
                </div>
            }

            @foreach (var post in Model.OtherPosts)
            {
                <div class="w-full md:col-span-1 col-span-3 group ease-in-out duration-1000">
                    <a href="/our-blogs/@post.Slug" class="w-full flex flex-col overflow-hidden">
                        <div class="w-full aspect-[16/8.2] overflow-hidden">
                            <img src="@(string.IsNullOrWhiteSpace(post.ThumbnailImagePath) ? "/customer/assets/img/hero/hero1.jpg" : $"/{post.ThumbnailImagePath}")"
                                 alt="@post.Title"
                                 class="w-full h-full object-cover object-center grayscale-50 group-hover:grayscale-0 group-hover:scale-110 ease-in-out duration-1000">
                        </div>
                        <div class="w-full h-full">
                            <div class="flex flex-col items-start justify-start gap-y-2 py-2">
                                <p class="text-neutral-500 font-light text-base">@post.PublishedOnUtc?.ToString("MMM dd, yyyy")</p>
                                <h3 class="text-lg md:text-xl font-normal text-neutral-500 hover:text-[#e1a74e] ease-in-out duration-300">
                                    @post.Title
                                </h3>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>

        <div class="w-full flex justify-center py-6">
            <nav class="flex flex-wrap items-center gap-4 text-gray-500 text-sm sm:text-base" aria-label="Blog list pagination">
                <span class="flex items-center gap-1 text-gray-400 cursor-not-allowed">
                    ← <span class="hidden xs:inline">Previous</span>
                </span>

                <div class="flex flex-wrap items-center justify-center gap-3 sm:gap-4">
                    <span class="text-neutral-700 font-medium">1</span>
                </div>

                <span class="flex items-center gap-1 text-gray-400 cursor-not-allowed">
                    <span class="hidden xs:inline">Next</span> →
                </span>
            </nav>
        </div>
    </section>
</div>
