@model TravelCleanArch.Web.Models.Home.ExpeditionsByTypeViewModel

<section class="w-full relative overflow-hidden">
    <div class="w-full aspect-[16/6] bg-[url('./assets/img/contact.jpg')] bg-cover bg-center bg-no-repeat relative">
        <div class="w-full flex items-start justify-center h-full bg-black/50 pt-8 md:px-39 sm:px-20 px-4 flex-col">
            <h5 class="text-2xl text-neutral-100 font-medium mb-0">Expeditions</h5>
            <h1 class="text-[48px] text-[#e1a74e] font-black -mt-1 mb-3 uppercase">@Model.TypeTitle</h1>
            @if (!string.IsNullOrWhiteSpace(Model.TypeDescription))
            {
                <p class="text-2xl font-light text-neutral-200 max-w-xl leading-[1.4] tracking-wide mb-10">
                    @Model.TypeDescription
                </p>
            }
        </div>
    </div>
</section>

<section class="w-full md:px-39 sm:px-20 px-4 py-20">
    <div class="w-full flex items-center justify-between gap-4 mb-10 flex-wrap">
        <h2 class="text-3xl font-bold text-neutral-800">@Model.TypeTitle Expeditions</h2>
        <a href="/" class="text-base font-medium text-[#e1a74e]">Back to Home</a>
    </div>

    @if (Model.Expeditions.Count == 0)
    {
        <p class="text-lg text-neutral-600">No published expeditions are available for this type right now.</p>
    }
    else
    {
        <div class="w-full grid md:grid-cols-2 gap-6">
            @foreach (var expedition in Model.Expeditions)
            {
                <article class="w-full rounded-lg border border-neutral-200 bg-white p-6 space-y-3">
                    <h3 class="text-2xl font-bold text-neutral-800">@expedition.Name</h3>
                    <div class="flex items-center gap-3 text-sm text-neutral-500">
                        <span>@expedition.Destination</span>
                        <span>â€¢</span>
                        <span>@expedition.DurationDays days</span>
                    </div>
                    <p class="text-base text-neutral-600">@expedition.ShortDescription</p>
                </article>
            }
        </div>
    }
</section>
