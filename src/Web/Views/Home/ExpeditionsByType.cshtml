<!-- Hero section -->
<section class="w-full relative overflow-hidden">
    <div class="w-full aspect-[16/6] bg-cover bg-center bg-no-repeat relative"
         style="background-image: url('/@(string.IsNullOrWhiteSpace(Model.ImagePath)
                                                                                                                          ? "/images/default-hero.jpg"
                                                                                                                          : Model.ImagePath)');">

        <div class="w-full flex items-start justify-center h-full bg-black/50
            pt-8 md:px-32 sm:px-16 px-4 flex-col">

            <h5 class="text-2xl text-neutral-100 font-medium mb-0">
                Expeditions
            </h5>

            @if (!string.IsNullOrWhiteSpace(Model.TypeTitle))
            {
                <h1 class="text-4xl md:text-5xl text-[#e1a74e] font-black -mt-1 mb-3">
                    @Model.TypeTitle
                </h1>
            }

            @if (!string.IsNullOrWhiteSpace(Model.ShortDescription))
            {
                <p class="text-xl md:text-2xl font-light text-neutral-200
                    max-w-xl leading-relaxed tracking-wide mb-10">
                    @Model.ShortDescription
                </p>
            }

        </div>
    </div>
</section>

