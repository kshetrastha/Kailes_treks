@model TravelCleanArch.Web.Models.Home.HomeIndexViewModel
@{
    ViewData["Title"] = "Why With Us";
    var heroBackgroundImage = string.IsNullOrWhiteSpace(Model.WhyWithUsBackgroundImagePath)
        ? Url.Content("~/assets/img/contact.jpg")
        : Url.Content($"~/{Model.WhyWithUsBackgroundImagePath}");
}

<!-- Hero section -->
<section class="w-full relative overflow-hidden">
    <div
        class="w-full md:aspect-[16/7.38] aspect-[9/16] bg-cover bg-center bg-no-repeat relative"
        style="background-image: url('@heroBackgroundImage')">
        <div
            class="w-full flex items-start md:justify-center justify-start md:pt-0 pt-24 h-full bg-black/50 md:px-39 sm:px-20 px-4 flex-col">
            <h5 data-aos="fade-right" data-aos-duration="1000" data-aos-delay="100"
                class="text-2xl text-neutral-100 font-medium mb-0 -mt-3">
                @Model.WhyWithUsHeader
            </h5>
            <h1 data-aos="fade-right" data-aos-duration="1100" data-aos-delay="200"
                class="text-[48px] md:text-[64px] text-[#e1a74e] font-black -mt-3 mb-3">
                @Model.WhyWithUsTitle
            </h1>
            <p data-aos="fade-right" data-aos-duration="1200" data-aos-delay="300"
                class="text-2xl font-light text-neutral-200 max-w-xl leading-[1.5] tracking-wide mb-10">
                @Model.WhyWithUsDescription
            </p>
        </div>
    </div>

    <div class="w-full bg-neutral-200 md:py-22 py-12">
        <div class="w-full grid md:grid-cols-4 grid-cols-2 gap-12 md:px-39 sm:px-20 px-4">
            <div class="w-full flex items-center justify-center flex-col space-y-4">
                <h2 data-aos="fade-right" data-aos-duration="1000" data-aos-delay="100"
                    class="text-2xl font-black text-[#e1a74e]">
                    96%
                </h2>
                <p data-aos="fade-right" data-aos-duration="1200" data-aos-delay="200"
                    class="text-base font-light text-center text-neutral-600">Expedition success rate</p>
            </div>

            <div class="w-full flex items-center justify-center flex-col space-y-4">
                <h2 data-aos="fade-right" data-aos-duration="1200" data-aos-delay="300"
                    class="text-2xl font-black text-[#e1a74e]">
                    1500+
                </h2>
                <p data-aos="fade-right" data-aos-duration="1300" data-aos-delay="400"
                    class="text-base font-light text-center text-neutral-600">Climbers On The Top Of 8000ers
                </p>
            </div>

            <div class="w-full flex items-center justify-center flex-col space-y-4">
                <h2 data-aos="fade-right" data-aos-duration="1400" data-aos-delay="500"
                    class="text-2xl font-black text-[#e1a74e]">
                    90%
                </h2>
                <p data-aos="fade-right" data-aos-duration="1500" data-aos-delay="600"
                    class="text-base font-light text-center text-neutral-600">Climber summit rate</p>
            </div>

            <div class="w-full flex items-center justify-center flex-col space-y-4">
                <h2 data-aos="fade-right" data-aos-duration="1600" data-aos-delay="700"
                    class="text-2xl font-black text-[#e1a74e]">
                    200+
                </h2>
                <p data-aos="fade-right" data-aos-duration="1700" data-aos-delay="800"
                    class="text-base font-light text-center text-neutral-600">
                    Total Expedition over 8000m
                </p>
            </div>
        </div>
    </div>
</section>

