@model TravelCleanArch.Web.Models.Home.HomeIndexViewModel
@{
    ViewData["Title"] = "Why With Us";
    var heroBackgroundImage = string.IsNullOrWhiteSpace(Model.WhyWithUsBackgroundImagePath)
        ? Url.Content("~/assets/img/contact.jpg")
        : Url.Content($"~/{Model.WhyWithUsBackgroundImagePath}");
}

<section class="w-full relative overflow-hidden">
    <div
        class="w-full md:aspect-[16/7.38] aspect-[9/16] bg-cover bg-center bg-no-repeat relative"
        style="background-image: url('@heroBackgroundImage')">
        <div
            class="w-full flex items-start md:justify-center justify-start md:pt-0 pt-24 h-full bg-black/50 md:px-39 sm:px-20 px-4 flex-col">
            <h5 data-aos="fade-right" data-aos-duration="1000" data-aos-delay="100"
                class="text-2xl text-neutral-100 font-medium mb-0 -mt-3">
                @Model.WhyWithUsHeader
            </h5>
            <h1 data-aos="fade-right" data-aos-duration="1100" data-aos-delay="200"
                class="text-[48px] md:text-[64px] text-[#e1a74e] font-black -mt-3 mb-3">
                @Model.WhyWithUsTitle
            </h1>
            <p data-aos="fade-right" data-aos-duration="1200" data-aos-delay="300"
                class="text-2xl font-light text-neutral-200 max-w-xl leading-[1.5] tracking-wide mb-10">
                @Model.WhyWithUsDescription
            </p>
        </div>
    </div>
</section>

<section class="w-full md:px-37 sm:px-20 px-6 py-14 bg-gradient-to-b from-white to-neutral-100">
    <div class="max-w-7xl mx-auto">
        @if (Model.WhyWithUsItems.Count > 0)
        {
            <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                @for (var i = 0; i < Model.WhyWithUsItems.Count; i++)
                {
                    var item = Model.WhyWithUsItems[i];
                    var offsetClass = i % 2 == 1 ? "md:translate-y-6" : string.Empty;

                    <article data-aos="fade-up" data-aos-duration="1000"
                        class="@offsetClass rounded-2xl bg-white border border-neutral-200 p-6 shadow-sm hover:shadow-lg transition duration-300">
                        <div class="flex items-start gap-4">
                            @if (!string.IsNullOrWhiteSpace(item.ImagePath))
                            {
                                <img src="@Url.Content($"~/{item.ImagePath}")"
                                     alt="@item.Title"
                                     class="shrink-0 w-12 h-12 rounded-full object-cover border border-[#e1a74e]/30" />
                            }
                            else
                            {
                                <div class="shrink-0 w-12 h-12 rounded-full bg-[#e1a74e]/15 text-[#e1a74e] flex items-center justify-center text-xl">
                                    <i class="@(string.IsNullOrWhiteSpace(item.IconCssClass) ? "fa-solid fa-mountain" : item.IconCssClass)"></i>
                                </div>
                            }
                            <div>
                                <h3 class="text-lg font-semibold text-neutral-800 uppercase tracking-wide mb-2">@item.Title</h3>
                                <p class="text-neutral-600 leading-relaxed text-sm md:text-base">@item.Description</p>
                            </div>
                        </div>
                    </article>
                }
            </div>
        }
        else
        {
            <div class="rounded-xl border border-dashed border-neutral-300 bg-white p-8 text-center text-neutral-500">
                Why With Us content will appear here soon.
            </div>
        }
    </div>
</section>
