@model TravelCleanArch.Web.Models.Home.HomeIndexViewModel
@{
    ViewData["Title"] = "Why With Us";
}

<section class="w-full bg-neutral-900 text-white py-20 md:py-28">
    <div class="max-w-7xl mx-auto md:px-37 sm:px-20 px-6 text-center">
        <p class="uppercase tracking-[0.32em] text-xs text-[#e1a74e] mb-4">Company</p>
        <h1 class="text-4xl md:text-6xl font-bold uppercase">Why With Us</h1>
        <p class="mt-6 max-w-3xl mx-auto text-neutral-200 leading-relaxed">
            Discover why climbers from around the world trust Seven Summit Treks for Himalayan expeditions,
            safety-first leadership, and summit-focused support.
        </p>
    </div>
</section>

<section class="w-full md:px-37 sm:px-20 px-6 py-14 bg-gradient-to-b from-white to-neutral-100">
    <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-10 items-start">
            <div class="lg:col-span-4 lg:sticky lg:top-28">
                <p data-aos="fade-up" data-aos-duration="900"
                   class="uppercase tracking-[0.24em] text-xs font-semibold text-[#e1a74e] mb-4">
                    Why Climb With Seven Summit Treks
                </p>
                <h2 data-aos="fade-up" data-aos-duration="1000"
                    class="text-3xl md:text-4xl font-bold text-neutral-900 uppercase leading-tight">
                    Why With Us
                </h2>
                <div data-aos="fade-up" data-aos-duration="1100" class="w-20 h-1 bg-[#e1a74e] my-5"></div>
                <p data-aos="fade-up" data-aos-duration="1200" class="text-neutral-600 leading-relaxed">
                    From expedition planning to summit success, our team delivers the same trusted support,
                    logistics, and mountain safety standards that define world-class Himalayan adventures.
                </p>
            </div>

            <div class="lg:col-span-8">
                @if (Model.WhyWithUsItems.Count > 0)
                {
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                        @for (var i = 0; i < Model.WhyWithUsItems.Count; i++)
                        {
                            var item = Model.WhyWithUsItems[i];
                            var offsetClass = i % 2 == 1 ? "md:translate-y-6" : string.Empty;

                            <article data-aos="fade-up" data-aos-duration="1000"
                                     class="@offsetClass rounded-2xl bg-white border border-neutral-200 p-6 shadow-sm hover:shadow-lg transition duration-300">
                                <div class="flex items-start gap-4">
                                    <div class="shrink-0 w-12 h-12 rounded-full bg-[#e1a74e]/15 text-[#e1a74e] flex items-center justify-center text-xl">
                                        <i class="@(string.IsNullOrWhiteSpace(item.IconCssClass) ? "fa-solid fa-mountain" : item.IconCssClass)"></i>
                                    </div>
                                    <div>
                                        <h3 class="text-lg font-semibold text-neutral-800 uppercase tracking-wide mb-2">@item.Title</h3>
                                        <p class="text-neutral-600 leading-relaxed text-sm md:text-base">@item.Description</p>
                                    </div>
                                </div>
                            </article>
                        }
                    </div>
                }
                else
                {
                    <div class="rounded-xl border border-dashed border-neutral-300 bg-white p-8 text-center text-neutral-500">
                        Why With Us content will appear here soon.
                    </div>
                }
            </div>
        </div>
    </div>
</section>
