@using TravelCleanArch.Application.Abstractions.Travel
@inject IExpeditionTypeService ExpeditionTypeService
@inject IExpeditionService ExpeditionService
@{
    var expeditionTypes = await ExpeditionTypeService.ListAsync(includeUnpublished: false, Context.RequestAborted);
    var expeditions = (await ExpeditionService.ListAsync(null, "published", null, null, 1, 100, Context.RequestAborted)).Items;

    var expeditionNavData = expeditionTypes
        .Select(type => new
        {
            Type = type,
            Items = expeditions
                .Where(item => item.ExpeditionTypeId == type.Id)
                .OrderBy(item => item.Ordering)
                .ThenBy(item => item.Name)
                .Take(4)
                .ToList()
        })
        .Where(group => group.Items.Count > 0)
        .ToList();
}

