@model TravelCleanArch.API.Models.Account.RegisterViewModel

<h2>Create account</h2>

<div asp-validation-summary="ModelOnly" class="validation"></div>

<form asp-action="Register" method="post">
    @Html.AntiForgeryToken()

    <div class="field">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" />
        <span asp-validation-for="FullName" class="validation"></span>
    </div>

    <div class="field">
        <label asp-for="Email"></label>
        <input asp-for="Email" />
        <span asp-validation-for="Email" class="validation"></span>
    </div>

    <div class="field">
        <label asp-for="Password"></label>
        <input asp-for="Password" />
        <span asp-validation-for="Password" class="validation"></span>
    </div>

    <div class="field">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" class="validation"></span>
    </div>

    <button class="btn" type="submit">Register</button>
</form>
